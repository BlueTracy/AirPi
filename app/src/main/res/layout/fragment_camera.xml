<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="20dp"
            android:gravity="left|center"
            android:textSize="16sp"
            android:background="#EEEEEE"
            android:textColor="#000000"
            android:text="拍照"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="1"
           android:orientation="horizontal">
           <FrameLayout
               android:id="@+id/layout_preview1"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1">
              <!-- <SurfaceView
                   android:id="@+id/surface_preview1"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent" />-->
           </FrameLayout>
           <FrameLayout
               android:id="@+id/layout_preview2"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1">
             <!--  <SurfaceView
                   android:id="@+id/surface_preview2"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent" />-->
           </FrameLayout>

       </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <FrameLayout
                android:id="@+id/layout_preview3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
               <!-- <SurfaceView
                    android:id="@+id/surface_preview3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />-->
            </FrameLayout>
            <FrameLayout
                android:id="@+id/layout_preview4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
              <!--  <SurfaceView
                    android:id="@+id/surface_preview4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />-->
            </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
           >
            <Button
                android:id="@+id/btn_take_pic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/white_button_selector"
                android:gravity="center"
                android:text="拍照"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
